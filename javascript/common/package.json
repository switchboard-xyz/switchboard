    "@types/node": "^18.11.9",
    "chai": "^4.3.7",
    "eslint": "^8.35.0",
    "esm": "^3.2.25",
    "gts": "^3.1.1",
    "jest": "^29.4.3",
    "prettier": ">=2.0.0",
    "protobufjs-cli": "^1.0.2",
    "rimraf": "^5.0.0",
    "shelljs": "^0.8.5",
    "shx": "^0.3.4",
    "ts-jest": "^29.0.5",
    "typescript": "^4.8.4"
  },
  "engines": {
    "node": ">=12"
  }
