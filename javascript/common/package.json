      "types": "./build.d.ts",
      "import": "./build.js",
      "require": "./build.cjs"
    },
    "./utils": {
      "types": "./utils.d.ts",
      "import": "./utils.js",
      "require": "./utils.cjs"
    },
    "./package.json": "./package.json"
  },
  "type": "module",
  "main": "./index.js",
  "types": "./index.d.ts",
  "scripts": {
    "build": "rimraf lib && node ./esbuild.js",
    "test": "jest",
