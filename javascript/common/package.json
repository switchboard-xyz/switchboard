{
  "name": "@switchboard-xyz/common",
  "license": "MIT",
  "version": "2.2.5",
  "description": "common type definitions and utils for interacting with switchboard",
  "files": [
    "lib/",
    "src/",
    "package.json",
    "index.cjs",
    "index.js",
    "index.d.ts",
    "esm-utils.cjs",
    "esm-utils.js",
    "esm-utils.d.ts",
    "protos.cjs",
    "protos.js",
    "protos.d.ts",
    "networks.cjs",
    "networks.js",
    "networks.d.ts"
  ],
  "exports": {
    ".": {
      "types": "./index.d.ts",
      "import": "./index.js",
      "require": "./index.cjs"
    },
    "./esm-utils": {
      "types": "./esm-utils.d.ts",
      "import": "./esm-utils.js",
      "require": "./esm-utils.cjs"
    },
    "./protos": {
      "types": "./protos.d.ts",
      "import": "./protos.js",
      "require": "./protos.cjs"
    },
    "./networks": {
      "types": "./networks.d.ts",
      "import": "./networks.js",
      "require": "./networks.cjs"
    },
    "./package.json": "./package.json"
  },
  "type": "module",
  "main": "./index.js",
  "types": "./index.d.ts",
  "scripts": {
    "build": "pnpm exec rimraf lib && node ./compile-protos.js && echo '!src/esm-utils.js' >> .gitignore",
    "test": "pnpm exec jest",
    "prepack": "pnpm lint && pnpm build && pnpm test",
    "lint": "pnpm exec eslint src/**/*.ts",
    "clean": "pnpm exec rimraf node_modules lib .turbo",
    "fix": "pnpm exec eslint --fix src/**/*.ts"
  },
  "dependencies": {
    "@solana/web3.js": "^1.66.2",
    "@types/big.js": "^6.1.6",
    "@types/bn.js": "^5.1.1",
    "big.js": "^6.2.1",
    "bn.js": "^5.2.1",
    "bs58": "^5.0.0",
    "decimal.js": "^10.4.3",
    "protobufjs": "^7.2.3",
    "yaml": "^2.2.1"
  },
  "devDependencies": {
    "@switchboard-xyz/eslint-config": "workspace:^0.1.8",
    "@types/chai": "^4.3.4",
    "@types/jest": "^29.4.0",
    "@types/node": "^18.11.9",
    "chai": "^4.3.7",
    "eslint": "^8.35.0",
    "esm": "^3.2.25",
    "gts": "^3.1.1",
    "jest": "^29.4.3",
    "prettier": ">=2.0.0",
    "protobufjs-cli": "^1.0.2",
    "rimraf": "^5.0.0",
    "shelljs": "^0.8.5",
    "shx": "^0.3.4",
    "ts-jest": "^29.0.5",
    "typescript": "^4.8.4"
  },
  "engines": {
    "node": ">=12"
  }
}
