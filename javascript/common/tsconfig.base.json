{
  "include": ["./src/**/*"],
  "exclude": ["test/**/*", "lib", "node_modules"],
  "files": ["src/index.ts"],
  "compilerOptions": {
    "target": "es2019",
    "moduleResolution": "node",
    "composite": true,
    "sourceMap": true,
    "inlineSources": true,
    "declaration": true,
    "declarationMap": true,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "types": ["node", "jest"],
    "allowJs": true,
    "checkJs": false,
    // strict
    "strict": true,
    "noImplicitAny": true
  }
}
